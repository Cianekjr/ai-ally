{
  "name": "guide-me-now",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "build:client": "turbo run build --filter=client",
    "build:server": "turbo run build --filter=server",
    "heroku-postbuild": "if [ $CLIENT_ENV ]; then pnpm run build:client; elif [ $SERVER_ENV ]; then pnpm run build:server; else echo no environment detected, please set CLIENT_ENV or SERVER_ENV; fi"
  },
  "devDependencies": {
    "eslint-config-custom": "workspace:*",
    "prettier": "latest",
    "turbo": "1.5.5"
  },
  "packageManager": "pnpm@7.27.1"
}