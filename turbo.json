{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env",
    ".env",
    ".env.local",
    "tsconfig.json"
  ],
  "pipeline": {
    "lint": {
      "outputs": []
    },
    "dev": {
      "dependsOn": [
        "^db:generate"
      ],
      "cache": false
    },
    "build": {
      "dependsOn": [
        "^build",
        "^db:generate"
      ],
      "outputs": [
        "dist/**",
        ".next/**"
      ]
    },
    "build#server": {
      "env": [
        "PORT",
        "JWT_SECRET",
        "DATABASE_URL",
        "MAILGUN_API_KEY"
      ]
    },
    "build#client": {
      "env": [
        "PORT",
        "APP_PUBLIC_URL"
      ]
    },
    "db:generate": {
      "cache": false
    },
    "db:push": {
      "cache": false
    }
  }
}