{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env",
    ".env",
    ".env.local",
    "tsconfig.json"
  ],
  "pipeline": {
    "lint": {},
    "dev": {
      "dependsOn": [
        "^generate"
      ],
      "cache": false,
      "outputs": [
        "dist/**",
        "build/**"
      ]
    },
    "build": {
      "dependsOn": [
        "^build",
        "^generate"
      ],
      "outputs": [
        "dist/**",
        ".next/**",
        "!.next/cache/**"
      ]
    },
    "build#server": {
      "env": [
        "PORT",
        "JWT_SECRET",
        "DATABASE_URL",
        "MAILGUN_API_KEY"
      ],
      "outputs": [
        "dist/**",
        "build/**"
      ]
    },
    "build#client": {
      "env": [
        "PORT",
        "APP_PUBLIC_URL",
        "NEXT_PUBLIC_API_URL",
        "NODE_ENV"
      ],
      "outputs": [
        "dist/**",
        "build/**"
      ]
    },
    "generate": {
      "cache": false,
      "outputs": [
        "dist/**",
        "build/**"
      ]
    },
    "push": {
      "cache": false,
      "outputs": [
        "dist/**",
        "build/**"
      ]
    }
  }
}